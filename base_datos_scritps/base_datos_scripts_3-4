
1. Design Contact Database / Hack - 3 

create table countries(
    id_country serial primary key,
    name varchar (100) not null 
);


create table priorities(
    id_priority serial primary key,
    type_name varchar (100) not null
);

create table contact_request(
    id_email varchar (100) primary key,
    name varchar (100) not null,
    detail varchar (100) not null,
    physical_address varchar (100) not null,

    id_priority integer not null references  priorities(id_priority),
    id_country integer not null references countries(id_country)
);

--------------------------------------------------------------------------------------

1. Crud Contact Database / Hack - 4 


insert into countries (name) VALUES
('Venezuela'),
('Colombia'),
('Argentina'),
('México'),
('España');

insert into priorities (type_name) VALUES
('Alta'),
('Media'),
('Baja');

insert into contact_request (id_email, id_country, id_priority, name, detail, physical_address) VALUES
('rider.diaz@email.com', 1, 1, 'rider diaz', 'Necesito soporte técnico urgente.', 'Av. Principal 123, Caracas'),
('nicole.garcia@email.com', 3, 2, 'nicole garcia', 'Consulta sobre precios de productos.', 'Calle Falsa 456, Buenos Aires'),
('luis.ramirez@email.com', 5, 3, 'luis ramirez', 'Agradecimiento por el buen servicio.', 'Plaza Mayor 789, Madrid');


update contact_request
set
    id_priority = 2,
    detail = 'Necesito soporte técnico urgente. (Prioridad actualizada a Media)'
where
    id_email = 'miguel.perez@email.com';


delete from contact_request
where
    id_email = 'paul.ramirez@email.com';


select * from contact_request;
select 'Las operaciones CRUD se han ejecutado correctamente.' AS status;